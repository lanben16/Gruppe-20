<?php

$port = 3306;

$username = 'root';
    
$passord = 'root';
    
$name = 'ølpriser';

$connection = new PDO("mysql:host=localhost;dbname={$name};port={$port}", $username, $passord);

$statment = $connection->prepare('SELECT * FROM øl');

$statment->execute();

while($row = $statment->fetch(PDO::FETCH_ASSOC)) {
  $øl[] = $row;
}

echo '<pre>';
print_r($row);
die();
  
?> 
<main class ="main">

<div class="grid">

